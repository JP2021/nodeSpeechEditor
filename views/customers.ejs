<%- include ("top.ejs") %>

<div class="alert alert-info">
    <%= qty %> Clientes Cadastrados
</div>

<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>CPF/CNPJ</th>
            <th>E-mail</th>
            <th>Telefone</th>
            <th>Celular</th>
            <th>Região</th>
            <th>UF</th>
            <th>Rua</th>
            <th>Bairro</th>
            <th>CEP</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% customers.forEach(item => { %>
            <tr>
                <td><a href="/customers/edit/<%= item._id %>"><%= item.name %></a></td>
                <td><%= item.cpf %></td>
                <td><%= item.email %></td>
                <td><%= item.telefone %></td>
                <td><%= item.celular %></td>
                <td><%= item.city %></td>
                <td><%= item.uf %></td>
                <td><%= item.rua %></td>
                <td><%= item.bairro %></td>
                <td><%= item.cep %></td>
                <td>
                    <center>
                        <a href="/customers/delete/<%= item._id %>" title="Excluir" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir esse cliente?')">
                            <img src="/images/eraser.png" />
                        </a>
                    </center>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" href="/customers/<%= page - 1 %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <% for (let i = 1; i <= pagesQty; i++) { %>
            <li class="page-item <%= page === i ? 'active' : '' %>">
                <a class="page-link" href="/customers/<%= i %>"><%= i %></a>
            </li>
        <% } %>
        <li class="page-item">
            <a class="page-link" href="/customers/<%= page + 1 %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

<div class="row">
    <div class="col-md-2">
        <a href="/customers/new" class="btn btn-primary">Cadastrar Novo</a>
    </div>
    <div class="col-md-2">
        <a href="/index" class="btn btn-primary">Index</a>
    </div>
    <div class="col-md-2">
        <form action="/logout" method="POST">
            <input type="submit" value="Logout" class="btn btn-primary"/>
        </form>
    </div>
</div>

<%- include("bottom.ejs") %>
